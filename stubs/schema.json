{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "prompts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "role": {
                  "type": "string",
                  "enum": [
                    "user",
                    "assistant",
                    "system"
                  ]
                },
                "content": {
                  "type": "string"
                }
              },
              "required": [
                "role",
                "content"
              ],
              "additionalProperties": false
            }
          },
          "params": {
            "type": "object",
            "properties": {
              "maxTokens": {
                "type": "integer",
                "minimum": 1,
                "maximum": 2048
              },
              "temperature": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "topP": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "frequencyPenalty": {
                "type": "number",
                "minimum": 0,
                "maximum": 2
              },
              "presencePenalty": {
                "type": "number",
                "minimum": 0,
                "maximum": 2
              },
              "stop": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "messages",
          "params"
        ],
        "additionalProperties": false
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "fields"
        ],
        "additionalProperties": false
      }
    },
    "repeats": {
      "type": "integer",
      "minimum": 1
    }
  },
  "required": [
    "name",
    "prompts",
    "inputs",
    "repeats"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}