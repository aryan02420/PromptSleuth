{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@promptsleuth/core": ["libs/core/src/index.ts"],
      "@promptsleuth/ide": ["apps/ide/src"],
      "@promptsleuth/ui-components/*": ["libs/ui-components/src/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
